@model Patient

<div class="container-fluid" style="padding-top: 140px; padding-bottom: 60px; background-color:darkkhaki;color: #ffffff;">
    <h1 class="text-center" style="padding-bottom: 20px; font-size: 50px;">Update @Html.DisplayFor(model => model.FirstName)'s profile</h1>
    <h2 class="text-center">Patient</h2>
    <hr />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-controller="Patient" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 20px; padding-left: 250px;">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" style="border-radius: 4px; padding-left: 30px; padding-right: 30px;"/>
                </div>
            </form>
        </div>
    </div>


    <div style="padding-top: 30px; font-size: 20px;"  class="text-center">
        <a asp-controller="Patient" asp-action="ReadAll">Back to List of Patients</a>
    </div>
</div>